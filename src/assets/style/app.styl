@import 'config.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
html
	font-size 10px

.container
	padding-left 10%
	padding-right 10%
	margin-left auto
	margin-right auto
.header
	&-app
		position relative
		display flex
		justify-content space-between
		align-items center
		height 66px
		width 100%
		background-color $dark-color
	&-search 
		width 300px
		input 
			width 100%
			height 35px
			border-radius 5px
			padding 0 20px
	&-logo
		height inherit
		img
			height 100%
			width auto
.ReactTable
	font-size 1.8rem
	text-align center

aside
	float left
	height: 100vh
	width: 18%
	margin-left 10%
	margin-top 80px
	a
		display block
		width 85%
		line-height: 3rem
		margin-top 10px
		font-size 2.5rem
		text-decoration: none
		border-bottom 1px solid $grey
	svg
		vertical-align: bottom 
		margin-right 15px
		transform scale(.8)
.canvas-container
	display flex
	flex-direction: column
	padding-right 10%
	p
		font-size: 2rem
	span:nth-child(odd)
		color: #757575
	span:nth-child(even)
		color: #212121
.mt-3
	margin-top 3rem