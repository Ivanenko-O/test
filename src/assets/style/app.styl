@import 'config.styl'

*
	padding 0
	margin 0
	box-sizing border-box
	
html
	font-size 10px

.container
	padding-left 10%
	padding-right 10%
	margin-left auto
	margin-right auto
.header
	&-app
		position relative
		display flex
		justify-content space-between
		align-items center
		height 66px
		width 100%
		background-color $dark-color
	&-search 
		width 300px
		input 
			width 100%
			height 35px
			border-radius 5px
			padding 0 20px
	&-logo
		height inherit
		img
			height 100%
			width auto